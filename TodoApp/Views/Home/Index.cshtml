@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Hello!</h1>
    @if (User.Identity is not { IsAuthenticated: true })
    {
        <p>Please log in to access your list.</p>
    }
    else
    {
        <p>Welcome back, @User.Identity.Name!</p>
    }
</div>